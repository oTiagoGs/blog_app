<div class="col-12">
  <h2 class="section-title"> <%= msg_jumbotron %> </h2>
</div>
<div class="col-lg-8 mb-5 mb-lg-0">
  <div class="row">
    <% @articles.each do |article| %>
      
      <div class="col-md-6 mb-4">
        <article class="card article-card article-card-sm h-100">
          <%= link_to site_article_path(article) do %>
            <div class="card-image">
              <div class="post-info"> <span class="text-uppercase"> <%= article.created_at %> </span>
                
              </div>
              <% if article.url_image? %>
                <%= image_tag article.url_image , class:"w-100" %>
              <% end %>
            </div>
          <% end %>
          <div class="card-body px-0 pb-0">
            <ul class="post-meta mb-2">
              <li> <%= link_to article.subject.description,
                        site_articles_subject_path(article.subject_id, article.subject.description) %>
              </li>
            </ul>
            <h2>
              <%= link_to site_article_path(article), class:"post-title" do %>
                <%= article.title %>
              <% end %>
            </h2>
            <p class="card-text"> <%= article.description %> </p>
            <div class="content">
              <%= link_to 'Ver artigo completo', site_article_path(article), class:"read-more-btn" %> 

            </div>
          </div>
        </article>
      </div>
    <% end %>
    
    <div class="col-12">
      <div class="row">
        <div class="col-12">
          <nav class="mt-4">
            <!-- pagination -->
            <%= paginate @articles %>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>