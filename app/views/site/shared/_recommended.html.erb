<div class="col-lg-4">
  <div class="widget-blocks">
    <div class="row">
      <div class="col-lg-12 col-md-6">
        <div class="widget">
          <h2 class="section-title mb-3">Recomendados</h2>
          <div class="widget-body">
            <div class="widget-list">
              <% @articles.each do |article| %>
                <% if article.recommended == true %>
                  <article class="card mb-4">
                    <%= link_to site_article_path(article) do %>
                      <div class="card-image">
                        <div class="post-info"> <span class="text-uppercase"> <%= article.created_at %> </span>
                        </div>
                        <%= image_tag article.url_image,  class:"w-100" %>
                      </div>
                    <% end %>
                    
                    <div class="card-body px-0 pb-1">
                      <ul class="post-meta mb-2">
                        <li> <%= link_to article.subject.description,
                                  site_articles_subject_path(article.subject_id, article.subject.description) %>
                        </li>
                      </ul>
                      <h3>
                      <%= link_to site_article_path(article), class:"post-title" do %>
                        <%= article.title %>
                      <% end %>
                      <p class="card-text"> <%= article.description %> </p>
                      <div class="content">
                        <%= link_to 'Ver artigo completo', site_article_path(article), class:"read-more-btn" %> 
                      </div>
                    </div>
                  </article>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-12 col-md-6">
        <div class="widget">
          <h2 class="section-title mb-3">Categorias</h2>
          <div class="widget-body">  
            <ul class="widget-list">
              <% @subjects.each do |subject| %>
                <li><%= link_to "#{subject.description}
                                (#{subject.articles_count})", 
                                site_articles_subject_path(subject.id, subject.description) %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>