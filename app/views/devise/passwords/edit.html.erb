<div>
  <a class="hiddenanchor" id="signin"></a>

    <div class="login_wrapper">
      <div class="animate form login_form">
        <section class="login_content">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <h1>Mude a sua senha</h1>
     
            <%= f.hidden_field :reset_password_token %>

            <div class="field">
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder:"Senha", class:"form-control" %>
            </div>

            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirmação da senha", class:"form-control" %>
            </div>


            <div>
              <%= f.submit "Salvar nova senha", class:"btn btn-success submit", style:"float: none; margin-left: 0px;" %>
            </div>

            <div class="clearfix"></div>

            <div class="separator">
              <div class="clearfix"></div>
              <br/>

              <div>
                <h1> BlogApp!</h1>
                <p>©2024 All Rights Reserved. BlogApp! is a Bootstrap 4 template. Privacy and Terms</p>
              </div>
            </div>
          <% end %>
        </section>
      </div>
    </div>
</div>