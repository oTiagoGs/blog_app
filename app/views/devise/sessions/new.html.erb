<div>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h1> Login Administrativo </h1>
          <div>
            <%= f.email_field :email, autofocus: true, placeholder:"Email", class:"form-control" %>
          </div>
          <div>
            <%= f.password_field :password, autocomplete: "current-password", placeholder:"Senha", class:"form-control" %>
          </div>

          <div>
            <%= f.submit "Entrar", class:"btn btn-light submit", style:"float: none; margin-left: 0px; width: 40%;" %>
            <%= link_to 'Esqueceu a sua senha?', new_admin_password_path, class:"reset_pass" %>
          </div>

          <div class="clearfix"></div>

          <div class="separator">
            <div class="clearfix"></div>
            <br />

            <div>
              <h1> BlogApp!</h1>
              <p>Â©2024 All Rights Reserved. BlogApp! is a Bootstrap 4 template. Privacy and Terms</p>
            </div>
          </div>
        <% end %>
      </section>
    </div>
  </div>
</div>