<div class="x_panel">
    <div class="x_title">
        <h2>Listando os Assuntos/Áreas</h2>
        <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
        
        <div class="clearfix"></div>
    </div>

    <div class="x_content">
        
        <table class="table table-hover">
            <thead>
            <tr>
                <th >#</th>
                <th ><%= translate_field(@subjects, :description) %></th>
                <th >
                    <%= link_to new_admins_backoffice_subject_path, class:"btn btn-success btn-circle" do %>
                        <i style="width:15px" class="fa fa-plus"></i>
                    <% end %>
                </th>
            </tr>
            </thead>
            <% @subjects.each do |subject| %>
                <tbody>
                <tr>
                    <th scope="row"><%= subject.id %></th>
                    <td><%= subject.description %></td>
                    <td>
                        <%= link_to edit_admins_backoffice_subject_path(subject), class:"btn btn-primary btn-circle" do %>
                            <i style="width:15px" class="fa fa-edit"></i>
                        <% end %>
                        <%= link_to admins_backoffice_subject_path(subject),
                            method: :delete, class:"btn btn-danger btn-circle",
                            data: {confirm: "Deseja excluir este assunto/área?"} do %>
                                <i style="width:15px" class="fa fa-close"></i>
                        <% end %>
                    </td>
                </tr>
                </tbody>
            <% end %>
        </table>

    </div>
</div>
<div class="d-flex justify-content-center">
    <%= paginate @subjects %>
</div>