<h1> <%= action_message %> Assunto/Área </h1>
<br>

<div class="row">

    <% if @subject.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="Close"><span aria-hidden="true">&times;</span></button>
            <ul>
                <% @subject.errors.full_messages.each do |message| %>
                    <li> <%= message %> </li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2> Assuntos/Área </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                <%= form_with(model: [ :admins_backoffice, @subject ], local: true, class:"form-horizontal form-label-left") do |form| %>

                    <div class="item form-group">
                        <%= form.label :description, class:"col-form-label col-md-3 col-sm-3 label-align" %>
                        <div class="col-md-6 col-sm-6 ">
                            <%= form.text_field :description, class:"form-control", required:'required' %>
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="item form-group">
                        <div class="col-md-6 col-sm-6 offset-md-3">
                            <button type="submit" class="btn btn-success" >Salvar</button>
                        </div>
                    </div>

                <% end %>
            </div>
        </div>
    </div>
</div>