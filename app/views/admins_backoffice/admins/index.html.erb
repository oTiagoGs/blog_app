<div class="x_panel">
    <div class="x_title">
        <h2>Listando os <small>Administradores</small></h2>
        <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
        
        <div class="clearfix"></div>
    </div>

    <div class="x_content">
        
        <table class="table table-hover">
            <thead>
            <tr>
                <th >ID</th>
                <th >Email</th>
            </tr>
            </thead>
            <% @admins.each do |admin| %>
                <tbody>
                <tr>
                    <th scope="row"><%= admin.id %></th>
                    <td><%= admin.email %></td>
                    <td>
                        <% if current_admin.email == "admin@admin.com" %>
                            <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle" do %>
                                <i style="width:15px" class="fa fa-plus"></i>
                            <% end %>
                            <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do %>
                                <i style="width:15px" class="fa fa-edit"></i>
                            <% end %>
                            <%= link_to admins_backoffice_admin_path(admin),
                                method: :delete, class:"btn btn-danger btn-circle",
                                data: {confirm: "Deseja excluir este administrador?"} do %>
                                    <i style="width:15px" class="fa fa-close"></i>
                            <% end %>
                            
                        <% end %>
                    </td>
                </tr>
                </tbody>
            <% end %>
        </table>

    </div>
</div>