<h1>Editando</h1>

<div class="x_panel">
    <div class="x_title">
        <h2>Editando dados do administrador </h2>
        <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>

    <% if @admin.errors.any? %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <ul>
                <% @admin.errors.full_messages.each do |message| %>
                    <li> <%= message %> </li>
                <% end %>
            </ul>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% end %>

    <div class="x_content">
        <br>
        <%= form_with(model: [ :admins_backoffice, @admin ], local: true , class:"form-label-left input_mask") do |form| %>

            <div class="col-md-6 col-sm-6  form-group has-feedback">
                <%= form.text_field :email, class:"form-control has-feedback-left", id:"inputSuccess3", placeholder:"Email"%>
                <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
            </div>

            <div class="col-md-6 col-sm-6  form-group has-feedback">
                <%= form.text_field :password, class:"form-control", id:"inputSuccess2", placeholder:"Senha"%>
                <span class="fa fa-lock form-control-feedback right" aria-hidden="true"></span>
            </div>

            <div class="col-md-6 col-sm-6  form-group has-feedback">
                <%= form.text_field :password_confirmation, class:"form-control has-feedback-left", id:"inputSuccess1", placeholder:"Confirmação da Senha"%>
                <span class="fa fa-lock form-control-feedback left" aria-hidden="true"></span>
            </div>

            <div class="clearfix"></div>

            <div class="ln_solid"></div>
            <div class="form-group row">
                <div class="col-md-9 col-sm-9  offset-md-3">
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>
            </div>

        <% end %>
    </div>
</div>